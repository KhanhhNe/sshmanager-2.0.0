{
  "version": 1,
  "formatters": {
    "standard": {
      "format": "[%(asctime)s,%(msecs)03d] %(name)s %(levelname)s - %(message)s",
      "datefmt": "%H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "level": "INFO",
      "formatter": "standard",
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stderr"
    },
    "file": {
      "level": "DEBUG",
      "formatter": "standard",
      "class": "logging.FileHandler",
      "filename": "data/debug.log",
      "mode": "a"
    }
  },
  "loggers": {
    "": {
      "handlers": [
        "console"
      ],
      "level": "WARNING",
      "propagate": false
    },
    "uvicorn.error": {
      "handlers": [
        "console"
      ],
      "level": "INFO",
      "propagate": false
    }
  }
}